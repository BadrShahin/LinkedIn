@model LinkedIn.Models.Comment
@using (Ajax.BeginForm("EditComment", "Post", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "itemcomments", InsertionMode = InsertionMode.Replace, OnSuccess = "toggleEditComment()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5 class="text-muted">Edit Comment</h5>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.comment_id)

        @Html.HiddenFor(model => model.member_id)

        @Html.HiddenFor(model => model.post_id)

        <div class="form-group">
            @*@Html.LabelFor(model => model.comment_content, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-12">
                @Html.EditorFor(model => model.comment_content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comment_content, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr style="margin: 0 -5px 5px -5px" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        </div>
    </div>
}

